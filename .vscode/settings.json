{
  "editor.tabSize": 2,        // 탭 크기 설정 (2 또는 4)
  "editor.insertSpaces": true, // 탭 대신 스페이스 사용
  "editor.detectIndentation": false, // 파일의 기존 들여쓰기 감지 비활성화

  // Prettier 관련 설정 추가
  "editor.formatOnSave": true, // 저장 시 자동 포맷팅
  "prettier.trailingComma": "es5", // , 붙일 때 줄바꿈 (ES5 기준)
  "prettier.tabWidth": 2, // Prettier 탭 크기 설정
  "prettier.useTabs": false, // Prettier에서 탭 대신 스페이스 사용
  "prettier.jsxSingleQuote": false, // JSX에서 큰따옴표 사용
  "prettier.printWidth": 80, // 줄바꿈 시 최대 줄 길이 설정
  "prettier.arrowParens": "always", // 화살표 함수에서 항상 괄호 사용
  "prettier.endOfLine": "lf", // 줄바꿈 설정 (Unix 스타일)
  
  // TypeScript 및 JSX/TSX 파일을 위한 추가 설정
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode", // TSX 파일에 대해 Prettier 사용
    "editor.formatOnSave": true // TSX 파일 저장 시 포맷팅
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode", // TS 파일에 대해 Prettier 사용
    "editor.formatOnSave": true // TS 파일 저장 시 포맷팅
  }
}
